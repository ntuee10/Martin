# Martin Backend Configuration
# Copy this file to .env and update with your values

# Grok3 API Configuration
# Get your API key from: https://x.ai/api
GROK3_API_KEY=your_grok3_api_key_here

# Alternative: Use OpenAI API (optional)
# OPENAI_API_KEY=your_openai_api_key_here

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Grok3 API Settings
GROK3_API_URL=https://api.x.ai/v1
GROK3_MODEL=grok-beta

# Security (generate a random string for production)
API_SECRET_KEY=your-secret-key-here

# CORS Settings (for Chrome Extension)
# In production, replace * with your extension ID
CORS_ORIGINS=["*"]

# Logging
LOG_LEVEL=INFO
LOG_FILE=martin.log

# Cache Settings (optional)
ENABLE_CACHE=true
CACHE_TTL=3600

# Rate Limiting (requests per minute)
RATE_LIMIT=60

# Development Mode
DEBUG=false
